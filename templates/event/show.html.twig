{% extends 'base.html.twig' %}

{% block title %}Mes listes{% endblock %}

{% block body %}
    <h1>Mes listes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Statut</th>
                <th>Créé par</th>
                <th>Créé le</th>
                <th>Mis à jour le</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.title }}</td>
                    <td>{{ event.status }}</td>
                    <td>{{ event.creePar.username }}</td> {# Supposons que creePar est une relation vers User #}
                    <td>{{ event.createdAt|date('Y-m-d H:i:s') }}</td>
                    <td>{{ event.updatedAt|date('Y-m-d H:i:s') }}</td>
                    <td>
                        <a href="{{ path('app_event_show', {'id': event.id}) }}">Voir</a>
                        <a href="{{ path('app_event_edit', {'id': event.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucun événement trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}">Créer nouveau</a>
{% endblock %}
